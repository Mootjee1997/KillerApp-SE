@model KillerApp_SE.Models.Gebruiker

@{
    ViewBag.Title = "Inlog";
}

<h2 style="margin-left: 495px;">Inloggen</h2>
<div id="Beschrijving">
    <center>
        <p>Log hieronder in om toegang te krijgen tot alle functies.</p>
        <p>Heb je nog geen account? Vraag een account aan bij een van de medewerkers.</p>
    </center>
</div>
<div id="Login">
    <form>
        <div class="form-group" style="margin-left: 222px; margin-bottom: 15px;">
            <label for="input" class="col-lg-2 control-label">Gebruikernaam</label>
            <div class="col-lg-10">
                <input name="gebruikernaam" type="text" class="form-control" id="input" placeholder="Gebruikernaam">
            </div>
        </div>
        <div class="form-group" style="margin-left: 222px; margin-bottom: 15px;">
            <label for="input" class="col-lg-2 control-label">Wachtwoord</label>
            <div class="col-lg-10">
                <input name="wachtwoord" type="text" class="form-control" id="input" placeholder="Wachtwoord">
            </div>
        </div>
        <p class="btn btn-success" style="margin-left: 390px; width: 100px; margin-top: 6px;"> @Html.ActionLink("Log in", "Authorise", "Inlog")</p>
     </form>
</div>
