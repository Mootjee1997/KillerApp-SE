
@{
    ViewBag.Title = "GebruikerToevoegen";
}

<form class="form-horizontal">
    <fieldset style="margin-left: 16px;">
        <legend style="margin-left: 166px;">Voeg een gebruiker toe</legend>
        <div class="form-group">
            <label for="input" class="col-lg-2 control-label">Naam</label>
            <div class="col-lg-10">
                <input name="Naam" type="text" class="form-control" id="input" placeholder="Naam">
            </div>
        </div>
        <div class="form-group">
            <label for="input" class="col-lg-2 control-label">Adres</label>
            <div class="col-lg-10">
                <input naam="Adres" type="text" class="form-control" id="input" placeholder="Adres">
            </div>
        </div>
        <div class="form-group">
            <label for="input" class="col-lg-2 control-label">Geboortedatum</label>
            <div class="col-lg-10">
                <input naam="Geboortedatum" type="text" class="form-control" id="input" placeholder="YY-MM-DD">
            </div>
        </div>
        <div class="form-group">
            <label for="input" class="col-lg-2 control-label">Gebruikersnaam</label>
            <div class="col-lg-10">
                <input naam="Gebruikernaam" type="text" class="form-control" id="input" placeholder="Gebruikernaam">
            </div>
        </div>
        <div class="form-group">
            <label for="input" class="col-lg-2 control-label">Wachtwoord</label>
            <div class="col-lg-10">
                <input naam="Wachtwoord" type="text" class="form-control" id="input" placeholder="Wachtwoord">
            </div>
        </div>
        <a href="#" class="btn btn-success" style="margin-left: 156px;">Maak gebruiker aan</a>
    </fieldset>
</form>
