
@{
    ViewBag.Title = "GebruikerResetten";
}

<form class="form-horizontal">
    <fieldset style="margin-left: 16px;">
        <legend style="margin-left: 166px;">Herstel het wachtwoord voor een gebruiker</legend>
        <div class="form-group">
            <label for="input" class="col-lg-2 control-label">Gebruikernaam:</label>
            <div class="col-lg-10">
                <input name="Gebruikernaam" type="text" class="form-control" id="input" placeholder="Gebruikernaam">
            </div>
        </div>
        <div class="form-group">
            <label for="input" class="col-lg-2 control-label">Wachtwoord:</label>
            <div class="col-lg-10">
                <input naam="Wachtwoord" type="text" class="form-control" id="input" placeholder="Wachtwoord">
            </div>
        </div>
        <div class="form-group">
            <label for="input" class="col-lg-2 control-label">Bevestig wachtwoord:</label>
            <div class="col-lg-10">
                <input naam="WachtwoordBevestig" type="text" class="form-control" id="input" placeholder="Bevestig wachtwoord">
            </div>
        </div>
        <a href="#" class="btn btn-success" style="margin-left: 156px;">Reset</a>
    </fieldset>
</form>
